snippet ifndef
	#ifndef ${1/([A-Za-z0-9_]+).*/$1/}
	#define ${1:SYMBOL}
	#endif // $1

snippet define
	#ifndef ${1/([A-Za-z0-9_]+).*/$1/}
	#define ${1:SYMBOL}
	#endif // $1

snippet sleep
	std::this_thread::sleep_for(std::chrono::seconds($1));

snippet sleep_s
	std::this_thread::sleep_for(std::chrono::seconds($1));

snippet sleep_ms
	std::this_thread::sleep_for(std::chrono::milliseconds($1));

###########################################################################
#                            Function Snippets                            #
###########################################################################
snippet main
	int main(int argc, char *argv[]) {
		${0}
		return 0;
	}

snippet std_cout
	std::cout << "${1}" << std::endl;

snippet std_err
	std::cerr << "${1}" << std::endl;

snippet std_co_debug
	std::cout << "[debug] ${1}" << std::endl;

snippet #ifndef
	#ifndef ${1:Name}
	#define $1


	#endif // $1

###########################################################################
#                            Key Snippets                            #
###########################################################################
snippet for
	for (const auto& ${1:it} : ${2:list}) {
		${3}
	}

snippet for
	for (auto it = ${1:iterator}.begin(); it != ${1:iterator}.end(); ++it) {
		${2}
	}

snippet while
	while(${1:true}) {
	        ${2}
	}

snippet class
	class ${1:Class} {
	public:
	 $1() = default;
	 ~$1() = default;
	private:
	 $2
	};

snippet class
	class ${1:Class} {
	public:

	private:

	};

snippet struct
	struct ${1:Class} {

	};

snippet def
	${2:void} ${1:name}($3){
		${3}
	}

snippet namespace
	namespace ${1:namespace} {
		
	} // $1

snippet throw
	throw std::runtime_error("${1:message}");

snippet throw_runtime
	throw std::runtime_error("${1:message}");
